<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css">
<script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.1.3/js/bootstrap.min.js"></script>
<header class="main-nav-header">
  <nav>
  <div class="container-fluid">
    <div class="row">
    <div class="col-md-4">
      <span class="logo-box">
      <a class="text-center" href="/">
      <img class="nav-img" src="/assets/freedomex-main-logo.png">
      </a>
      </span>
      <div class="network-box">
      <div>
        Network
        <span class="green-dot pull-right"><img src="/assets/serverstatus-green.png"></span>
      </div>
      <span id="server-time">Server Time: 12:23:52</span>
      </div>
    </div>
    <div class="col-md-5 p-0 no-padding ng-scope" id="new_header_flex">
      <section class="bg-secondary">
      <ul id="flexiselDemo3" >
        <% @data.fetch(:markets).each do |market| %>
          <% ticker =  market.fetch(:ticker) %>
          <li id="<%= market.fetch(:id) %>">
            <div class="currency-name"><%= link_to market.fetch(:name), '/trading/' + market.fetch(:id) %></div>
            <div class="value-box">
              <div class="value-inner">
                <h4>Last Price</h4>
                <h3 class="lastTic"><%= ticker.fetch(:last) %></h3>
              </div>
              <div class="value-inner">
                <h4>24h change</h4>
                <h3 class="changeTic"><%= ticker.fetch(:last) %></h3>
              </div>
              <div class="value-inner">
                <h4>24h high</h4>
                <h3 class="highTic"><%= ticker.fetch(:high) %></h3>
              </div>
              <div class="value-inner">
                <h4>24h Low</h4>
                <h3 class="lowTic"><%= ticker.fetch(:low) %></h3>
              </div>
              <div class="value-inner">
                <h4>24h volume</h4>
                <h3 class="volumeTic"><%= ticker.fetch(:volume) %></h3>
              </div>
            </div>
          </li>
        <% end %>
      </ul>
      </section>
      <div class="collapse navbar-collapse" id="top-navbar">
      <!-- <ul id="menu" class="navbar-nav mr-auto">
        </ul> -->
      </div>
    </div>
    <div class="col-md-3">
      <ul class="right-nav nav-menu-right">
        <% if @data[:current_member] %>
          <!-- <li class="nav-item account-settings text-left active">
            <a class="nav-link " href="#" data-toggle="dropdown">
              <span class="user-icon"><img src="/assets/default-profile.png"></span>
              <span class="email-limit"><%#=@data.fetch(:current_member).fetch(:email)%></span>
            </a>

            <a class="nav-link" href="<%#= generate_ui_url('signout') %>"><span class="log-out-btn">Logout</span></a>
          </li> -->

          <%= render partial: 'settings' %>
        <% else %>
          <li class="nav-item account-settings text-left active">
            <%= t('markets.mask.warning').html_safe %>
          </li>
        <% end %>
        <li class="nav-item dropdown">
          <a class="nav-link " href="#" data-toggle="dropdown">
          <img src="/assets/en.png">
          </a>
        </li>
      </ul>
    </div>
    </div>
  </div>
  </nav>
</header>


<script type="text/javascript">
$(window).load(function() {
  $("#flexiselDemo3").flexisel({
    visibleItems: 1,
    itemsToScroll: 1,
    autoPlay: {
      enable: true,
      interval: 4000,
      pauseOnHover: true
    }
  });

});
</script>
