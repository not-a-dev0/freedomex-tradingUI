<audio preload="preload" id="success-fx">
  <source src="<%= audio_path('success.mp3') %>" />
</audio>

<audio preload="preload" id="warning-fx">
  <source src="<%= audio_path('warning.mp3') %>" />
</audio>
<%= render partial: 'new_header' %>
<%#= render partial: 'header' %>
<div id="wrap">
  <div class="content">
    <div class="row">
      <div class="col-md-8">
        <%= render partial: 'candlestick' %>
        <%= render partial: 'range_switch' %>
        <%= render partial: 'indicator_switch' %>
      </div>
      <div class="col-md-4">
        <%= render partial: 'market_list' %>

        <%#= render partial: 'depths' %>
        <%#= render partial: 'ticker' %>
        <%#= render partial: 'ask_entry', locals: { market: @data.fetch(:current_market) } %>
        <%#= render partial: 'bid_entry', locals: { market: @data.fetch(:current_market) } %>
      </div>
    </div>

    <div class="row">
      <div class="col-md-12">
        <%= render partial: 'order_book' %>
      </div>
    </div>


    <div class="clearfix"></div>
      <div class="container-fluid">
      <div class="row orderTabs">
        <div class="col-md-8">
          <ul class="nav" role="">
            <li class="nav-item active">
              <a class="nav-link" id="open_order_list" style="cursor: pointer;">Open Orders</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" id="history_order_list" style="cursor: pointer;">History Orders</a>
            </li>
          </ul>
          <div id="first-div">
            <%= render partial: 'my_orders' %>
          </div>
          <div id="second-div" style="display: none;">
           <%= render partial: 'my_orders_history' %>
         </div>
        </div>

        <div class="col-md-4">
          <h2>Market History <%=@data.fetch(:current_market).fetch(:name)%></h2>
          <%= render partial: 'market_trades' %>
        </div>
      </div>
    </div>


  </div>
</div>

<script type="text/javascript">
  $(document).on('click', '#open_order_list', function(){
    $('#first-div').css("display","block");
    $('#second-div').css("display","none");
  })

  $(document).on('click', '#history_order_list', function(){
    $('#first-div').css("display","none");
    $('#second-div').css("display","block");
  })

</script>
