<div id="order_book" class="panel panel-default">

  <div class="row">
    <div class="col-md-12">
      <ul class="nav buysell_tabs_list" role="tablist">
        <li class="nav-item active">
          <a class="nav-link buy-btn" data-toggle="pill" href="#buy">BUY</a>
        </li>
        <li>
          <div class="order_book_middle">
            <div class="order_book_media">
              <div class="order_book-media_img">
                <img src="/assets/placeholder-male-square.png">
              </div>
              <div class="order_book_content">
                <% if @data[:current_member] %>
                  <h3><%=@data.fetch(:current_member).fetch(:email)%></h3>
                  <h5>Available Balance</h5>
                  <h6 class="bal"><code class="bid"></code> <%= @data.fetch(:current_market).fetch(:bid_unit).upcase %></h6>
                  <h6 class="bal"><code class="ask"></code> <%= @data.fetch(:current_market).fetch(:ask_unit).upcase %></h6>
                <%end%>
              </div>
            </div>
          </div>
        </li>
        <li class="nav-item">
          <a class="nav-link sell-btn" data-toggle="pill" href="#sell">SELL</a>
        </li>
      </ul>
    </div>
  </div>


  <div class="col-md-4">
    <div class="panel-body">
      <div id="order_book_header" class="row">
        <div class="col-lg-12 col-left">
          <table class="table">
            <thead>
              <tr>
                <th class="total text-right">
                  <div>TOTAL</div>
                </th>
                <th class="amount text-right">
                  <div><%= t('.amount') %></div>
                </th>
                <th class="price text-right">
                  <div><%= t('.price') %></div>
                </th>
                <th class="price text-right">
                  <div><%= t('.bid') %></div>
                </th>
              </tr>
            </thead>
          </table>
          <div class="table-scroller">
            <table class="table table-hover bids"></table>
          </div>
        </div>
      </div>
    </div>
  </div>

  <div class="col-md-4">
    <div class="tab-content">
      <div id="buy" class="tab-pane active">
        <%= render partial: 'bid_entry', locals: { market: @data.fetch(:current_market) } %>
      </div>
      <div id="sell" class="tab-pane">
        <%= render partial: 'ask_entry', locals: { market: @data.fetch(:current_market) } %>
      </div>
    </div>
  </div>

  <div class="col-md-4">
    <div class="panel-body">
      <div id="order_book_body" class="row">
        <div class="col-lg-12 col-left">
          <table class="table table-head">
            <thead>
              <tr>
                <th class="price text-center">
                  <div><%= t('.ask') %></div>
                </th>
                <th class="price text-center">
                  <div><%= t('.price') %></div>
                </th>
                <th class="volume text-center">
                  <div><%= t('.volume') %></div>
                </th>
                <th class="total text-center">
                  <div>TOTAL</div>
                </th>
              </tr>
            </thead>
          </table>
          <div class="table-scroller">
            <table class="table table-hover asks"></table>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>





